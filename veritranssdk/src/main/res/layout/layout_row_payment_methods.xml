<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?android:selectableItemBackground">


    <ImageView
        android:id="@+id/img_payment_method_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:src="@drawable/ic_launcher"/>


    <id.co.veritrans.sdk.widgets.TextViewFont
        android:id="@+id/text_payment_method_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_payment_method_icon"
        android:padding="@dimen/sixteen_dp"
        android:text="demo"
        app:font="@string/font_open_sans_regular"
        />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@id/text_payment_method_name"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/img_payment_method_icon"
        android:background="@color/gray_divider"
        android:layout_marginLeft="@dimen/eight_dp"
        />

</RelativeLayout>